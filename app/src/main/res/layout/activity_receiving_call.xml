<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.main.chat.calling.ReceivingCallActivity">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/size_100dp"
        android:src="@drawable/ic_doctor" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12dp"
        android:text="@string/patient"
        android:textColor="@color/red"
        android:textSize="@dimen/size_26sp" />

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="@dimen/size_250dp"
        android:layout_height="@dimen/size_250dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_30dp"
        android:src="@drawable/ic_prime_clinic_large" />

    <TextView
        android:id="@+id/tv_incoming_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30dp"
        android:text="@string/incoming_call"
        android:textColor="@color/red"
        android:textSize="@dimen/size_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_cancel"
            android:layout_weight="0.5"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:src="@drawable/ic_calling" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_accept"
            android:layout_weight="0.5"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:src="@drawable/ic_accepting_call" />

    </LinearLayout>


</LinearLayout>